<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="16dp">

    <!-- Drag Indicator -->
    <View
        android:id="@+id/bottomSheetDragIndicator"
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:background="@color/grey"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jl. Pangeran Antasari"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="?attr/colorOnPrimary" />

    <TextView
        android:id="@+id/tvLocationDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelurahan a, Kecamatan a"
        android:textSize="14sp"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginBottom="16dp" />

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="4dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:background="@drawable/bg_tab_bottom_sheet"
        app:tabIndicatorHeight="0dp" />


    <!-- Dynamic Content -->
    <LinearLayout
        android:id="@+id/linearLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Flood Status Section -->
        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_prediction_safe" />

            <TextView
                android:id="@+id/tvFloodStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Status Banjir: Aman"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Additional Information Section (Wind Speed, Humidity, Pressure) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_card_sheet"
            android:padding="15dp">

            <!-- Wind Speed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/windIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_wind_power_24" />

                <TextView
                    android:id="@+id/tvWindSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.54 m/s"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvWindSpeedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecepatan Angin"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Humidity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/humidityIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_water_drop_24" />

                <TextView
                    android:id="@+id/tvHumidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="90%"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvHumidityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelembapan"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Pressure -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/pressureIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_water_24" />

                <TextView
                    android:id="@+id/tvPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1010 hPa"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvPressureTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tekanan"
                    android:textSize="12sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Button -->
    <Button
        android:id="@+id/btnViewCCTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat CCTV"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="?attr/backgroundColor"
        android:gravity="center"
        android:textColor="@color/white" />
</LinearLayout>